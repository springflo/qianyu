<% provide(:title,"╰(*°▽°*)╯") %>
<h1><%= @user.username %> 的主页</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.username %>
      </h1>
    </section>
    
    <section class="stats">
      <%= render 'shared/stats'%>
    </section>
  </aside>
  <div class="col-md-8" >
    
    <%= render 'follow_form' if logged_in? %>
    
    <% if @user.posts.any? %>
      <h3>发表<%= @user.posts.count %>条微语 </h3>
      <ol class="posts" >
        <%=render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
  
</div>
