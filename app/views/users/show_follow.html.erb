<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "查看简历", @user %></span>
      <span><%= @user.posts.count %> <b>条微语</b></span>
    </section>
    
    <section class="stats">
        <%= render 'shared/stats' %>
        <% if @users.any? %>
         <div class="user_avatars">
           <% @users.each do |user| %>
               <%= link_to gravatar_for(user, size: 30), user %>
           <% end %>
         </div>
        <% end %>
    </section>
  </aside>
  
  <div class="col-md-8">
     <h3><%= @title %></h3>
     <% if @users.any? %>
         <ul class="users follow">
             <%= render @users %>
         </ul>
         <%= will_paginate %>
     <% end %>
  </div>
</div>