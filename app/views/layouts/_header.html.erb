<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to image_tag("qianyu-logo.png", alt: "qianyu"),
                root_path, id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-left">
                <li><%= link_to "首页", root_path %></li>
                <li><%= link_to "精选", posts_path %></li>
				<form action="#" method="get" 
				    class="navbar-form navbar-left" role="search">
					<div class="form-group">
						<input type="text" class="form-control" />
					</div> 
					<button type="submit" class="btn btn-default">搜索</button>
				</form> 
            </ul>
            <ul class="nav navbar-nav navbar-right">
                
                <li><%= link_to "首页", root_path %></li>
                <li><%= link_to "找朋友", users_path %></li>
                <% if logged_in? %>
                    <li><%= link_to "消息", '#' %></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            我的 <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                        <li><%= link_to "个人主页", current_user %></li>
                        <li><%= link_to "账户设置", edit_user_path(current_user) %></li>
                        <li class="divider"></li>
                        </ul>
                    </li>
                    <li>
                        <%= link_to "退出", logout_path, method: :delete %>
                    </li>
                <% else %>
                    <li><%= link_to "登录", login_path %></li>
                <% end %>     
            </ul>
        </nav>
    </div>
</header>